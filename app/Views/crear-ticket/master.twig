{% extends 'templates/master/master.twig' %}

{% block content %}
<style type="text/css">
	#panele{
		text-align:center;
		background-color: white;
		border:solid;
		border-color: #F0F0EE;
		/*padding:-2px;*/
		padding-left: initial;
    padding-right: initial;
    border-radius: 20px;
	}
	#buttone{
		border-bottom-left-radius: 20px;
    border-bottom-right-radius: 20px;
	}
</style>
<div class="col-sm-12 row">
	<div class="col-sm-12" style="text-align: center; padding: 20px;" >
	<h3>CREAR ANUNCIO</h3>
	</div>
	<div class="col-sm-6" id="panele">
		<h4>PERSONAS PERDIDAS</h4>
		<img src="{{ base_url() }}/public/assets/images/user-card/img-round5.jpg" alt="bg-img" class="img-responsive" alt="User-Profile-Image">
		<a class="btn btn-success col-sm-12" href="{{ base_url() }}/crear-anuncio/perdido" id="buttone">APORTAR</a>
	</div>

	<div class="col-sm-6" id="panele">
		<h4>PERSONAS DESAPARECIDAS</h4>
		<img src="{{ base_url() }}/public/assets/images/user-card/img-round5.jpg" alt="bg-img" class="img-responsive" alt="User-Profile-Image">
		<a class="btn btn-danger col-sm-12"  href="{{ base_url() }}/crear-anuncio/desaparecido" id="buttone" >APORTAR</a>
	</div>

</div>
{% endblock %}

{% block scripts %}
  {{ parent() }}
  <!-- pickadate -->
  <script type="text/javascript" src="{{ base_url() }}/public/assets/app/libs/pickadate/js/picker.js"></script>
  <script type="text/javascript" src="{{ base_url() }}/public/assets/app/libs/pickadate/js/picker.time.js"></script>
  <script type="text/javascript" src="{{ base_url() }}/public/assets/app/libs/pickadate/js/picker.date.js"></script>

  <!-- App JS -->
  <script type="text/javascript" src="{{ base_url() }}/public/assets/app/js/crear_ticket.js"></script>
  <script type="text/javascript" src="{{ base_url() }}/public/assets/app/js/validar_crear_ticket.js"></script>
{% endblock %}